#pragma config(Hubs, S1, HTMotor, HTMotor, none, none)
#pragma config(Sensor, S1, , sensorI2CMuxController)
#pragma config(Sensor, S2, touch, sensorTouch)
#pragma config(Sensor, S3, infrared, sensorHiTechnicIRSeeker12000)
#pragma config(Sensor, S4, sonar, sensorSONAR)
#pragma config(Motor, mtr_S1_C1_1, motorD, tmotorTetrix, openLoop, encoder)
#pragma config(Motor, mtr_S1_C1_2, motorE, tmotorTetrix, openLoop, reversed, encoder)
#pragma config(Motor, mtr_S1_C2_1, , tmotorTetrix, openLoop)
#pragma config(Motor, mtr_S1_C2_2, , tmotorTetrix, openLoop)
#include "JoystickDriver.c"
task main()
{
while(SensorValue(sensorHiTechnicIRSeeker12000) != 2 || SensorValue(sensorHiTechnicIRSeeker12000) != 8)
   {
   motor[motorD] = 100;
   motor[motorE] = 100;
   }
   
motor[motorD] = 100;
motor[motorE] = 100;
wait1Msec(500);//modify so that it works
   
  
while(SensorValue(sensorInfrared) != 5) 
	{
	motor[motorD] = 50 * sgn(5-SensorValue(sensorHiTechnicIRSeeker12000)); //make sure this turns the robot in the right direction
	motor[motorE] = -50 * sgn(5-SensorValue(sensorHiTechnicIRSeeker12000));
	}
   		
while(SensorValue(sensorHiTechnicIRSeeker12000) != 2 || SensorValue(sensorHiTechnicIRSeeker12000) != 8)
	{
	motor[motorD] = 100;
	motor[motorE] = 100;
	}
   	
while(SensorValue(sensorHiTechnicIRSeeker12000) != 5)
	{   		
	motor[motorD] = 50 * sgn(5-SensorValue(sensorHiTechnicIRSeeker12000)); //make sure this turns the robot in the right direction
	motor[motorE] = -50 * sgn(5-SensorValue(sensorHiTechnicIRSeeker12000));	
	}
   	
while(SensorValue(sensorSONAR) < 20)//needs to be changed after testing
	{
	motor[motorD] = -75; 
	motor[motorE] = -75;
	}
   
nMotorEncoder[motorF] = 0;
nMotorEncoderTarget[motorF] = 180; //set this to be whatever it needs to be so as to make the arm move down into position
motor[motorF] = 25;
while(nMotorRunState[motorF] != runStateIdle) {}
   
while(SensorValue(sensorSONAR) > 10) //we'll need to play around with this value a bit
	{
	motor[motorD] = 50;
	motor[motorE] = 50;
	}
   	
motor[motorG] = 50;//the sign should be adjusted so as to make it put the cube into the container
wait1Msec(3000);
   
while(SensorValue(sensorSONAR) < 20)//change to make sure it doesn't hit the wall behind it
	{
	motor[motorD] = -75;
	motor[motorE] = -75;
	}
   
while(SensorValue(sensorHiTechnicIRSeeker12000) != 8)
	{
	motor[motorD] = 50;
	motor[motorE] = -50;
	}
   
while(SensorValue(sensorSONAR) > 5)
   {
   motor[motorE] = 100;
   motor[motorD] = 100;
   }
   
while(SensorValue(sensorHiTechnicIRSeeker12000) != 8)
	{
	motor[motorD] = 50;
	motor[motorE] = -50;
	}
   
motor[motorD] = 100;
motor[motorE] = 100;
wait1Msec(2000); //adjust to give it enough time to get to the center of the ramp
   
nMotorEncoder[motorE] = 0;
nMotorEncoderTarget[motorE] = 180;//change so that it turns 90 degrees
motor[motorD] = -75;
motor[motorE] = 75;
while(nMotorRunState[motorE] = runStateIdle) {}
motor[motorD] = 0;//all of these blocks need to be adjusted so that it turnes 90 degrees either to the right or to the lef
   
while(SensorValue(sensorSONAR) > 226) //this is assuming it uses cm for its measurements
   {
   motor[motorD] = 100;
   motor[motorE] = 100;
   }
      
motor[motorD] = 0;
motor[motorE] = 0;

}   
   
   
